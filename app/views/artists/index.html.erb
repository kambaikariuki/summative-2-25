<p style="color: green"><%= notice %></p>

<% content_for :title, "Artists" %>

<h1>Artists</h1>

<div id="artists" style="display: flex;">
  <% @artists.each do |artist| %>
    <% user = artist.user %>
    <div class="card" style="width: 18rem; margin: 2rem">
      <img src="https://images.unsplash.com/photo-1673379324645-21a670fc74c8?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8cHJvZmlsZSUyMHBpYyUyMGljb258ZW58MHx8MHx8fDA%3D" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= artist.user.first_name + " " + artist.user.last_name%></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the cardâ€™s content.</p>
        <%= link_to "Show this artist", artist, class:"btn btn-secondary" %>
      </div>
    </div>
    <br>
  <% end %>
</div>
<% if current_user.admin?%>
  <%= link_to "New artist", new_artist_path %>
<%end%>